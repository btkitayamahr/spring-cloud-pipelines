node {
	stage('Build and Upload') {
		deleteDir()
		sh 'git config --global http.sslVerify false'
		
		// git clone app repository
		checkout([
			$class: 'GitSCM',
			clearWorkspace: true,
			branches: [
				[name: "*/${env.GIT_BRANCH_NAME ?: 'master'}"]
			],
			extensions: [
				[$class: 'WipeWorkspace'],
			],
			userRemoteConfigs: [
				[
					credentialsId: env.GIT_CREDENTIAL_ID,
					url: env.GIT_REPOSITORY
				]
			]
		])

		// Build app and create docker image
		dir("${WORKSPACE}/" + env.APP_NAME) {
			withMaven( maven: "Maven") {
				sh 'mvn clean install'
			}
		}

		// git clone spring-cloud-pipelines repository
		checkout([
			$class: 'GitSCM',
			clearWorkspace: true,
			branches: [
				[name: "*/${env.TOOLS_BRANCH}"]
			],
			userRemoteConfigs: [
				[
					credentialsId: env.GIT_CREDENTIAL_ID,
					url: env.TOOLS_REPOSITORY
				]
			]
		])
	}

	stage('Deploy to test') {
		sshPublisher(
			publishers: [
				sshPublisherDesc(
					configName: env.SSH_CONFIG_NAME_TEST,
					transfers: [
						sshTransfer(
							removePrefix: 'common/src/main/bash/ec2',
							sourceFiles: 'common/src/main/bash/ec2/docker-compose-' + env.APP_NAME + '-test.yml'
						),
						sshTransfer(
							execCommand: 'sudo docker stop ' + env.APP_NAME,
							execTimeout: 120000
						),
						sshTransfer(
							execCommand: 'sudo docker rm ' + env.APP_NAME,
							execTimeout: 120000
						),
						sshTransfer(
							execCommand: 'sudo docker-compose -f docker-compose-' + env.APP_NAME + '-test.yml up -d',
							execTimeout: 120000
						)
					],
					usePromotionTimestamp: false,
					useWorkspaceInPromotion: false,
					verbose: false
				)
			]
		)
	}
}